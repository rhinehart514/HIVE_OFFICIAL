{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "@hive/tokens": ["../tokens/src/index.ts"],
      "@hive/tokens/*": ["../tokens/src/*"],
      "@hive/core": ["../core/src/index.ts"],
      "@hive/core/*": ["../core/src/*"],
      "@hive/hooks": ["../hooks/src/index.ts"],
      "@hive/hooks/*": ["../hooks/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.stories.ts",
    "**/*.stories.tsx",
    "src/design-system/components/Accordion.tsx",
    "src/design-system/components/AspectRatio.tsx",
    "src/design-system/components/AttendeeList.tsx",
    "src/design-system/components/AvatarGroup.tsx",
    "src/design-system/components/Callout.tsx",
    "src/design-system/components/Checkbox.tsx",
    "src/design-system/components/EmptyState.tsx",
    "src/design-system/components/ErrorState.tsx",
    "src/design-system/components/EventCard.tsx",
    "src/design-system/components/Label.tsx",
    "src/design-system/components/MemberList.tsx",
    "src/design-system/components/Popover.tsx",
    "src/design-system/components/PostCard.tsx",
    "src/design-system/components/ProfileCard.tsx",
    "src/design-system/components/RadioGroup.tsx",
    "src/design-system/components/ScrollArea.tsx",
    "src/design-system/components/Separator.tsx",
    "src/design-system/components/Slot.tsx",
    "src/design-system/components/SpaceCard.tsx",
    "src/design-system/components/Tabs.tsx",
    "src/design-system/components/ThreadDrawer.tsx",
    "src/design-system/components/ToolCard.tsx",
    "src/design-system/components/NumberInput.tsx",
    "src/pages/onboarding/OnboardingFlowPage.tsx",
    "src/pages/profile/ProfileOverviewPage.tsx",
    "src/pages/feed/FeedPage.tsx",
    "src/pages/spaces/SpaceCard.tsx",
    "src/pages/spaces/SpacesDiscoveryPage.tsx",
    "src/pages/spaces/SpacesSkeletons.tsx",
    "src/pages/hivelab/HiveLabToolsPage.tsx",
    "src/pages/hivelab/AILandingPageChat.tsx",
    "src/pages/hivelab/ToolAnalyticsPage.tsx",
    "src/pages/hivelab/ToolPreviewPage.tsx",
    "src/pages/hivelab/HiveLabSkeletons.tsx",
    "src/pages/feed/FeedLoadingSkeleton.tsx",
    "src/pages/profile/ProfileViewLoadingSkeleton.tsx",
    "src/shells/VoidShell.tsx",
    "src/components/hivelab/element-renderers-legacy.tsx"
  ]
}
