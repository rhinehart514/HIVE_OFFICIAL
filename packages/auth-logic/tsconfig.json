{
  // TypeScript configuration for auth-logic package
  "extends": "../config/typescript/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": ["node", "vitest/globals"],
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@hive/core": ["../core/src"],
      "@hive/hooks": ["../hooks/src"],
      "@hive/ui": ["../ui/src"],
      "@hive/tokens": ["../tokens"],
      "@hive/validation": ["../validation/src"]
    },
    "typeRoots": ["../../node_modules/@types", "../../node_modules"],
    "tsBuildInfoFile": "./dist/.tsbuildinfo"
  },
  "include": ["src"],
  "exclude": ["dist", "build", "node_modules", "vitest.config.ts", "**/*.test.ts", "**/*.spec.ts"]
}
