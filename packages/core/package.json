{
  "name": "@hive/core",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/firebase-admin.d.ts",
      "import": "./dist/firebase-admin.js",
      "default": "./dist/firebase-admin.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@hive/firebase": "workspace:*",
    "firebase": "^11.0.2",
    "firebase-admin": "^13.0.1",
    "zod": "^3.24.1",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@hive/config-typescript": "workspace:*",
    "@types/node": "^20.19.0",
    "typescript": "^5.9.3",
    "vitest": "^2.1.8"
  }
}
