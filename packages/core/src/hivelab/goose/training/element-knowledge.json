{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$comment": "HiveMind Element Knowledge Base - All 27 HiveLab elements with training metadata",
  "version": "1.0.0",
  "elements": {
    "search-input": {
      "name": "Search Input",
      "description": "Text search input with autocomplete suggestions. Use for finding content, filtering by keywords, or querying data.",
      "category": "input",
      "use_when": [
        "search",
        "find",
        "lookup",
        "filter by text",
        "search box",
        "query",
        "autocomplete",
        "search bar"
      ],
      "config_schema": {
        "placeholder": {
          "type": "string",
          "default": "Search...",
          "description": "Placeholder text in the search box"
        },
        "showSuggestions": {
          "type": "boolean",
          "default": false,
          "description": "Show autocomplete suggestions"
        },
        "debounceMs": {
          "type": "number",
          "default": 300,
          "min": 0,
          "max": 2000,
          "description": "Delay before triggering search"
        }
      },
      "outputs": ["query", "searchTerm"],
      "inputs": [],
      "connects_well_with": ["result-list", "filter-selector", "tag-cloud"],
      "default_size": { "width": 280, "height": 60 },
      "stateful": false,
      "realtime": true,
      "example_configs": [
        { "placeholder": "Search events..." },
        { "placeholder": "Find members...", "showSuggestions": true },
        { "placeholder": "Search resources...", "debounceMs": 500 }
      ]
    },

    "date-picker": {
      "name": "Date Picker",
      "description": "Date and time selection calendar. Use for scheduling events, setting deadlines, or picking dates.",
      "category": "input",
      "use_when": [
        "pick date",
        "select date",
        "schedule",
        "deadline",
        "calendar",
        "date range",
        "when",
        "date selection"
      ],
      "config_schema": {
        "mode": {
          "type": "string",
          "enum": ["single", "range"],
          "default": "single",
          "description": "Single date or date range selection"
        },
        "showTime": {
          "type": "boolean",
          "default": false,
          "description": "Include time picker"
        },
        "minDate": {
          "type": "string",
          "format": "date",
          "description": "Earliest selectable date"
        },
        "maxDate": {
          "type": "string",
          "format": "date",
          "description": "Latest selectable date"
        }
      },
      "outputs": ["selectedDate", "dateRange"],
      "inputs": [],
      "connects_well_with": ["countdown-timer", "rsvp-button", "result-list"],
      "default_size": { "width": 280, "height": 140 },
      "stateful": false,
      "realtime": false,
      "example_configs": [
        { "mode": "single" },
        { "mode": "range", "showTime": true },
        { "mode": "single", "showTime": true }
      ]
    },

    "user-selector": {
      "name": "User Selector",
      "description": "Campus user picker with search and multi-select. Use for inviting members, assigning people, or building teams.",
      "category": "input",
      "use_when": [
        "select users",
        "pick members",
        "invite",
        "assign",
        "team",
        "choose people",
        "attendees",
        "participants"
      ],
      "config_schema": {
        "allowMultiple": {
          "type": "boolean",
          "default": true,
          "description": "Allow selecting multiple users"
        },
        "maxSelections": {
          "type": "number",
          "description": "Maximum number of users to select"
        },
        "filterByRole": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Filter users by role"
        },
        "placeholder": {
          "type": "string",
          "default": "Select users...",
          "description": "Placeholder text"
        }
      },
      "outputs": ["selectedUsers", "userIds"],
      "inputs": [],
      "connects_well_with": ["result-list", "leaderboard", "member-list"],
      "default_size": { "width": 280, "height": 100 },
      "stateful": false,
      "realtime": true,
      "example_configs": [
        { "allowMultiple": true, "placeholder": "Select team members..." },
        { "allowMultiple": false, "placeholder": "Choose presenter..." },
        { "maxSelections": 5, "placeholder": "Pick up to 5 attendees..." }
      ]
    },

    "form-builder": {
      "name": "Form Builder",
      "description": "Dynamic form with custom fields. Use for collecting structured data, surveys, or sign-ups.",
      "category": "input",
      "use_when": [
        "form",
        "survey",
        "registration",
        "sign up",
        "collect data",
        "feedback",
        "questionnaire",
        "application"
      ],
      "config_schema": {
        "fields": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "type": { "type": "string", "enum": ["text", "email", "number", "select", "textarea", "checkbox"] },
              "label": { "type": "string" },
              "required": { "type": "boolean" },
              "options": { "type": "array", "items": { "type": "string" } }
            }
          },
          "description": "Form field definitions"
        },
        "submitButtonText": {
          "type": "string",
          "default": "Submit",
          "description": "Text on submit button"
        },
        "showValidation": {
          "type": "boolean",
          "default": true,
          "description": "Show field validation errors"
        }
      },
      "outputs": ["formData", "submittedData"],
      "inputs": [],
      "connects_well_with": ["result-list", "chart-display", "notification-center"],
      "default_size": { "width": 280, "height": 200 },
      "stateful": true,
      "realtime": false,
      "example_configs": [
        {
          "fields": [
            { "name": "name", "type": "text", "label": "Your Name", "required": true },
            { "name": "email", "type": "email", "label": "Email", "required": true }
          ],
          "submitButtonText": "Register"
        },
        {
          "fields": [
            { "name": "feedback", "type": "textarea", "label": "Your Feedback", "required": true },
            { "name": "rating", "type": "select", "label": "Rating", "options": ["1", "2", "3", "4", "5"] }
          ],
          "submitButtonText": "Send Feedback"
        }
      ]
    },

    "filter-selector": {
      "name": "Filter Selector",
      "description": "Multi-select filter buttons with badges. Use for categorizing, tagging, or filtering by multiple criteria.",
      "category": "filter",
      "use_when": [
        "filter",
        "categories",
        "tags",
        "multi-select",
        "filter options",
        "select categories",
        "refine"
      ],
      "config_schema": {
        "options": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "value": { "type": "string" },
              "label": { "type": "string" },
              "count": { "type": "number" }
            }
          },
          "description": "Filter options to display"
        },
        "allowMultiple": {
          "type": "boolean",
          "default": true,
          "description": "Allow selecting multiple filters"
        },
        "showCounts": {
          "type": "boolean",
          "default": false,
          "description": "Show count badges on options"
        }
      },
      "outputs": ["selectedFilters", "filters"],
      "inputs": [],
      "connects_well_with": ["search-input", "result-list", "chart-display"],
      "default_size": { "width": 280, "height": 80 },
      "stateful": false,
      "realtime": true,
      "example_configs": [
        {
          "options": [
            { "value": "academic", "label": "Academic" },
            { "value": "social", "label": "Social" },
            { "value": "professional", "label": "Professional" }
          ],
          "allowMultiple": true
        },
        {
          "options": [
            { "value": "beginner", "label": "Beginner" },
            { "value": "intermediate", "label": "Intermediate" },
            { "value": "advanced", "label": "Advanced" }
          ],
          "allowMultiple": false
        }
      ]
    },

    "result-list": {
      "name": "Result List",
      "description": "Paginated list view for displaying results. Use for showing search results, filtered items, or collections.",
      "category": "display",
      "use_when": [
        "list",
        "results",
        "items",
        "display list",
        "show results",
        "collection",
        "directory"
      ],
      "config_schema": {
        "itemsPerPage": {
          "type": "number",
          "default": 10,
          "min": 1,
          "max": 100,
          "description": "Items shown per page"
        },
        "showPagination": {
          "type": "boolean",
          "default": true,
          "description": "Show pagination controls"
        }
      },
      "outputs": [],
      "inputs": ["items"],
      "connects_well_with": ["search-input", "filter-selector", "poll-element"],
      "default_size": { "width": 280, "height": 300 },
      "stateful": false,
      "realtime": true,
      "example_configs": [
        { "itemsPerPage": 10, "showPagination": true },
        { "itemsPerPage": 5, "showPagination": false }
      ]
    },

    "chart-display": {
      "name": "Chart Display",
      "description": "Data visualization charts (bar, line, pie). Use for showing poll results, voting statistics, or attendance data.",
      "category": "display",
      "use_when": [
        "chart",
        "graph",
        "visualization",
        "statistics",
        "data",
        "bar chart",
        "pie chart",
        "analytics"
      ],
      "config_schema": {
        "chartType": {
          "type": "string",
          "enum": ["bar", "line", "pie"],
          "required": true,
          "description": "Type of chart to display"
        },
        "title": {
          "type": "string",
          "description": "Chart title"
        },
        "showLegend": {
          "type": "boolean",
          "default": true,
          "description": "Show chart legend"
        }
      },
      "outputs": [],
      "inputs": ["data"],
      "connects_well_with": ["poll-element", "form-builder", "counter"],
      "default_size": { "width": 320, "height": 240 },
      "stateful": false,
      "realtime": true,
      "example_configs": [
        { "chartType": "bar", "title": "Poll Results", "showLegend": true },
        { "chartType": "pie", "title": "Response Distribution" },
        { "chartType": "line", "title": "Activity Over Time" }
      ]
    },

    "tag-cloud": {
      "name": "Tag Cloud",
      "description": "Visual display of tags with frequency weighting. Use for topic exploration or filtering.",
      "category": "display",
      "use_when": [
        "tags",
        "topics",
        "keywords",
        "word cloud",
        "tag cloud",
        "popular topics"
      ],
      "config_schema": {
        "maxTags": {
          "type": "number",
          "default": 50,
          "description": "Maximum tags to display"
        },
        "sortBy": {
          "type": "string",
          "enum": ["frequency", "alphabetical"],
          "default": "frequency",
          "description": "How to sort tags"
        },
        "showCounts": {
          "type": "boolean",
          "default": true,
          "description": "Show frequency counts"
        }
      },
      "outputs": ["selectedTag", "tags"],
      "inputs": ["tags"],
      "connects_well_with": ["search-input", "filter-selector", "result-list"],
      "default_size": { "width": 300, "height": 200 },
      "stateful": false,
      "realtime": false,
      "example_configs": [
        { "maxTags": 30, "sortBy": "frequency" },
        { "maxTags": 20, "showCounts": false }
      ]
    },

    "map-view": {
      "name": "Map View",
      "description": "Geographic map for location-based features. Use for event locations or campus navigation.",
      "category": "display",
      "use_when": [
        "map",
        "location",
        "where",
        "directions",
        "campus map",
        "venue",
        "meeting point"
      ],
      "config_schema": {
        "defaultZoom": {
          "type": "number",
          "default": 10,
          "min": 1,
          "max": 20,
          "description": "Initial zoom level"
        },
        "allowMarkers": {
          "type": "boolean",
          "default": true,
          "description": "Allow adding map markers"
        },
        "showControls": {
          "type": "boolean",
          "default": true,
          "description": "Show map controls"
        }
      },
      "outputs": ["selectedLocation", "markers"],
      "inputs": ["locations"],
      "connects_well_with": ["rsvp-button", "result-list", "event-picker"],
      "default_size": { "width": 400, "height": 300 },
      "stateful": false,
      "realtime": false,
      "example_configs": [
        { "defaultZoom": 15, "allowMarkers": true },
        { "defaultZoom": 12, "showControls": false }
      ]
    },

    "notification-center": {
      "name": "Notification Center",
      "description": "Display and manage notifications. Use for alerts and updates.",
      "category": "display",
      "use_when": [
        "notifications",
        "alerts",
        "updates",
        "messages",
        "inbox",
        "activity"
      ],
      "config_schema": {
        "maxNotifications": {
          "type": "number",
          "default": 10,
          "description": "Maximum notifications to show"
        },
        "groupByType": {
          "type": "boolean",
          "default": true,
          "description": "Group notifications by type"
        },
        "autoMarkRead": {
          "type": "boolean",
          "default": false,
          "description": "Auto-mark as read when viewed"
        }
      },
      "outputs": ["unreadCount", "notifications"],
      "inputs": [],
      "connects_well_with": ["rsvp-button", "announcement", "form-builder"],
      "default_size": { "width": 320, "height": 400 },
      "stateful": true,
      "realtime": true,
      "example_configs": [
        { "maxNotifications": 20, "groupByType": true },
        { "maxNotifications": 10, "autoMarkRead": true }
      ]
    },

    "poll-element": {
      "name": "Poll",
      "description": "Interactive poll with voting options and results visualization.",
      "category": "action",
      "use_when": [
        "poll",
        "vote",
        "voting",
        "opinion",
        "survey",
        "decision",
        "choose",
        "preference"
      ],
      "config_schema": {
        "question": {
          "type": "string",
          "required": true,
          "description": "The poll question"
        },
        "options": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 2,
          "maxItems": 10,
          "required": true,
          "description": "Voting options"
        },
        "allowMultipleVotes": {
          "type": "boolean",
          "default": false,
          "description": "Allow voting for multiple options"
        },
        "showResults": {
          "type": "boolean",
          "default": true,
          "description": "Show results after voting"
        },
        "showVoterCount": {
          "type": "boolean",
          "default": true,
          "description": "Show total voter count"
        },
        "closesAt": {
          "type": "string",
          "format": "date-time",
          "description": "When voting closes"
        }
      },
      "outputs": ["results", "totalVotes"],
      "inputs": [],
      "connects_well_with": ["chart-display", "leaderboard", "result-list"],
      "default_size": { "width": 300, "height": 200 },
      "stateful": true,
      "realtime": true,
      "example_configs": [
        {
          "question": "What's your favorite study spot?",
          "options": ["Library", "Coffee shop", "Dorm", "Student union"],
          "showResults": true
        },
        {
          "question": "When should we meet?",
          "options": ["Monday", "Wednesday", "Friday"],
          "allowMultipleVotes": true
        },
        {
          "question": "Rate today's session",
          "options": ["Great", "Good", "Okay", "Needs improvement"],
          "showVoterCount": false
        }
      ]
    },

    "rsvp-button": {
      "name": "RSVP Button",
      "description": "Event RSVP button with attendance tracking and waitlist support.",
      "category": "action",
      "use_when": [
        "rsvp",
        "attend",
        "going",
        "sign up",
        "register",
        "event registration",
        "attendance"
      ],
      "config_schema": {
        "eventName": {
          "type": "string",
          "required": true,
          "description": "Name of the event"
        },
        "maxAttendees": {
          "type": "number",
          "description": "Maximum capacity"
        },
        "showAttendeeCount": {
          "type": "boolean",
          "default": true,
          "description": "Show current attendee count"
        },
        "enableWaitlist": {
          "type": "boolean",
          "default": true,
          "description": "Enable waitlist when full"
        },
        "options": {
          "type": "array",
          "items": { "type": "string" },
          "default": ["Going", "Maybe", "Not Going"],
          "description": "RSVP response options"
        }
      },
      "outputs": ["attendees", "waitlist", "count"],
      "inputs": [],
      "connects_well_with": ["countdown-timer", "result-list", "notification-center", "map-view"],
      "default_size": { "width": 240, "height": 120 },
      "stateful": true,
      "realtime": true,
      "example_configs": [
        { "eventName": "Weekly Meeting", "showAttendeeCount": true },
        { "eventName": "Workshop", "maxAttendees": 30, "enableWaitlist": true },
        { "eventName": "Party", "options": ["Yes!", "Maybe", "Can't make it"] }
      ]
    },

    "countdown-timer": {
      "name": "Countdown Timer",
      "description": "Visual countdown to a target date/time with milestone alerts.",
      "category": "action",
      "use_when": [
        "countdown",
        "timer",
        "deadline",
        "time remaining",
        "event countdown",
        "launch",
        "until"
      ],
      "config_schema": {
        "targetDate": {
          "type": "string",
          "format": "date-time",
          "required": true,
          "description": "Target date/time for countdown"
        },
        "title": {
          "type": "string",
          "description": "Countdown title"
        },
        "showDays": {
          "type": "boolean",
          "default": true,
          "description": "Show days remaining"
        },
        "showHours": {
          "type": "boolean",
          "default": true,
          "description": "Show hours remaining"
        },
        "showMinutes": {
          "type": "boolean",
          "default": true,
          "description": "Show minutes remaining"
        },
        "showSeconds": {
          "type": "boolean",
          "default": true,
          "description": "Show seconds remaining"
        },
        "completedMessage": {
          "type": "string",
          "default": "Time's up!",
          "description": "Message when countdown completes"
        }
      },
      "outputs": ["remaining", "isComplete"],
      "inputs": [],
      "connects_well_with": ["rsvp-button", "notification-center", "announcement"],
      "default_size": { "width": 280, "height": 140 },
      "stateful": true,
      "realtime": true,
      "example_configs": [
        { "targetDate": "2026-02-01T18:00:00Z", "title": "Event Starts In" },
        { "targetDate": "2026-01-25T23:59:00Z", "title": "Application Deadline", "completedMessage": "Deadline passed!" },
        { "title": "Meeting Starts", "showSeconds": false }
      ]
    },

    "leaderboard": {
      "name": "Leaderboard",
      "description": "Competitive ranking display with scores and positions.",
      "category": "action",
      "use_when": [
        "leaderboard",
        "rankings",
        "scores",
        "competition",
        "top",
        "winners",
        "gamification"
      ],
      "config_schema": {
        "title": {
          "type": "string",
          "default": "Leaderboard",
          "description": "Leaderboard title"
        },
        "maxEntries": {
          "type": "number",
          "default": 10,
          "min": 1,
          "max": 100,
          "description": "Maximum entries to show"
        },
        "showRankChange": {
          "type": "boolean",
          "default": true,
          "description": "Show position changes"
        },
        "refreshInterval": {
          "type": "number",
          "default": 30000,
          "description": "Auto-refresh interval (ms)"
        }
      },
      "outputs": ["rankings", "topScorer"],
      "inputs": ["entries"],
      "connects_well_with": ["poll-element", "counter", "chart-display"],
      "default_size": { "width": 280, "height": 320 },
      "stateful": true,
      "realtime": true,
      "example_configs": [
        { "title": "Top Contributors", "maxEntries": 10 },
        { "title": "Study Streak", "showRankChange": true },
        { "title": "Event Attendance", "maxEntries": 5 }
      ]
    },

    "counter": {
      "name": "Counter",
      "description": "Simple increment/decrement counter with optional limits.",
      "category": "action",
      "use_when": [
        "counter",
        "count",
        "tally",
        "increment",
        "track number",
        "attendance count"
      ],
      "config_schema": {
        "initialValue": {
          "type": "number",
          "default": 0,
          "description": "Starting value"
        },
        "minValue": {
          "type": "number",
          "description": "Minimum allowed value"
        },
        "maxValue": {
          "type": "number",
          "description": "Maximum allowed value"
        },
        "step": {
          "type": "number",
          "default": 1,
          "description": "Increment/decrement step"
        },
        "label": {
          "type": "string",
          "description": "Counter label"
        }
      },
      "outputs": ["value"],
      "inputs": [],
      "connects_well_with": ["leaderboard", "chart-display", "notification-center"],
      "default_size": { "width": 160, "height": 100 },
      "stateful": true,
      "realtime": true,
      "example_configs": [
        { "label": "Attendees", "initialValue": 0, "minValue": 0 },
        { "label": "Points", "step": 5 },
        { "label": "Available Spots", "initialValue": 50, "minValue": 0, "maxValue": 50 }
      ]
    },

    "timer": {
      "name": "Timer",
      "description": "Stopwatch timer with start/stop/reset controls.",
      "category": "action",
      "use_when": [
        "stopwatch",
        "timer",
        "time",
        "duration",
        "study timer",
        "pomodoro",
        "session timer"
      ],
      "config_schema": {
        "autoStart": {
          "type": "boolean",
          "default": false,
          "description": "Start automatically"
        },
        "showMilliseconds": {
          "type": "boolean",
          "default": false,
          "description": "Show milliseconds"
        },
        "targetDuration": {
          "type": "number",
          "description": "Target duration in seconds"
        }
      },
      "outputs": ["elapsed", "isRunning", "laps"],
      "inputs": [],
      "connects_well_with": ["counter", "notification-center", "leaderboard"],
      "default_size": { "width": 200, "height": 120 },
      "stateful": true,
      "realtime": true,
      "example_configs": [
        { "autoStart": false },
        { "targetDuration": 1500, "showMilliseconds": false },
        { "autoStart": true, "showMilliseconds": true }
      ]
    },

    "role-gate": {
      "name": "Role Gate",
      "description": "Show/hide content based on member role. Use for restricting access to specific features or content.",
      "category": "layout",
      "use_when": [
        "restrict",
        "admin only",
        "leaders only",
        "role based",
        "permission",
        "access control"
      ],
      "config_schema": {
        "allowedRoles": {
          "type": "array",
          "items": { "type": "string" },
          "default": ["admin", "moderator"],
          "description": "Roles that can access content"
        },
        "fallbackMessage": {
          "type": "string",
          "default": "This content is restricted.",
          "description": "Message shown to unauthorized users"
        }
      },
      "outputs": ["hasAccess", "userRole"],
      "inputs": ["content"],
      "connects_well_with": ["announcement", "form-builder", "member-selector"],
      "default_size": { "width": 300, "height": 150 },
      "stateful": false,
      "realtime": false,
      "example_configs": [
        { "allowedRoles": ["admin"], "fallbackMessage": "Admin only feature" },
        { "allowedRoles": ["admin", "moderator"], "fallbackMessage": "Leaders only" }
      ]
    },

    "event-picker": {
      "name": "Event Picker",
      "description": "Browse and select from campus events. Use for event selection, linking, or scheduling.",
      "category": "input",
