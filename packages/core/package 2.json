{
  "name": "@hive/core",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./types/profile-system": {
      "types": "./dist/types/profile-system.d.ts",
      "import": "./dist/types/profile-system.js",
      "default": "./dist/types/profile-system.js"
    },
    "./types/error.types": {
      "types": "./dist/types/error.types.d.ts",
      "import": "./dist/types/error.types.js",
      "default": "./dist/types/error.types.js"
    },
    "./types/loading-state.types": {
      "types": "./dist/types/loading-state.types.d.ts",
      "import": "./dist/types/loading-state.types.js",
      "default": "./dist/types/loading-state.types.js"
    },
    "./infrastructure/realtime/feed-listener": {
      "types": "./dist/infrastructure/realtime/feed-listener.d.ts",
      "import": "./dist/infrastructure/realtime/feed-listener.js",
      "default": "./dist/infrastructure/realtime/feed-listener.js"
    },
    "./application/feed/queries/get-feed.query": {
      "types": "./dist/application/feed/queries/get-feed.query.d.ts",
      "import": "./dist/application/feed/queries/get-feed.query.js",
      "default": "./dist/application/feed/queries/get-feed.query.js"
    },
    "./application/search/queries/search.query": {
      "types": "./dist/application/search/queries/search.query.d.ts",
      "import": "./dist/application/search/queries/search.query.js",
      "default": "./dist/application/search/queries/search.query.js"
    },
    "./server": {
      "types": "./dist/firebase-admin.d.ts",
      "import": "./dist/firebase-admin.js",
      "default": "./dist/firebase-admin.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "test": "vitest",
    "test:watch": "vitest watch",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@google-cloud/vertexai": "^1.10.0",
    "@hive/firebase": "workspace:*",
    "firebase": "^11.10.0",
    "firebase-admin": "^13.6.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/node": "^20.19.0",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^9.28.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4",
    "vitest": "^2.1.9"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  }
}











