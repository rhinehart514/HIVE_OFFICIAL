# HIVE Production Environment Variables TEMPLATE
# ============================================
# COPY THIS FILE TO .env.production AND ADD REAL VALUES
# NEVER COMMIT .env.production TO GIT!
# ============================================

# ============================================
# FIREBASE CLIENT CONFIGURATION (Public - Safe in code)
# ============================================
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id
NEXT_PUBLIC_FIREBASE_DATABASE_URL=https://your_project.firebaseio.com

# ============================================
# FIREBASE ADMIN CONFIGURATION (SECRET - NEVER COMMIT!)
# ============================================
# CRITICAL SECURITY STEPS:
# 1. Go to Firebase Console > Project Settings > Service Accounts
# 2. Click "Generate New Private Key" to create a NEW key (old one is compromised)
# 3. Convert the private key to base64 to avoid multiline issues in Vercel:
#    cat service-account.json | jq -r '.private_key' | base64
# 4. Add these values to Vercel Environment Variables ONLY
# 5. NEVER commit actual values to the repository
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your_project.iam.gserviceaccount.com
# Use base64 encoded to avoid multiline issues in environment variables
FIREBASE_PRIVATE_KEY_BASE64=base64_encoded_private_key_here

# ============================================
# AUTHENTICATION & SECURITY (SECRET - NEVER COMMIT!)
# ============================================
# Generate NextAuth secret with: openssl rand -base64 32
NEXTAUTH_SECRET=generate_a_new_secret_never_use_example
NEXTAUTH_URL=https://www.hive.college

# JWT Admin Session Secret (512-bit) - Generate with: openssl rand -hex 64
# CRITICAL: Use the generated secret below for production
SESSION_SECRET=generate_new_session_secret_never_use_example

# CSRF Secret - Generate with: openssl rand -base64 32
CSRF_SECRET=generate_new_csrf_secret_never_use_example

# ============================================
# APP CONFIGURATION
# ============================================
NODE_ENV=production
NEXT_PUBLIC_ENVIRONMENT=production
NEXT_PUBLIC_APP_NAME=HIVE
NEXT_PUBLIC_APP_URL=https://www.hive.college
NEXT_PUBLIC_APP_VERSION=1.0.0

# ============================================
# CAMPUS CONFIGURATION (UB Specific)
# ============================================
NEXT_PUBLIC_CAMPUS_ID=ub-buffalo
NEXT_PUBLIC_CAMPUS_NAME=University at Buffalo
NEXT_PUBLIC_CAMPUS_EMAIL_DOMAIN=buffalo.edu
NEXT_PUBLIC_CAMPUS_SHORT_NAME=UB

# ============================================
# EMAIL SERVICE CONFIGURATION (Required for magic links)
# ============================================
# Option 1: SendGrid (Recommended for production)
SENDGRID_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM=noreply@hive.college
EMAIL_REPLY_TO=support@hive.college

# Option 2: Resend (Alternative)
# RESEND_API_KEY=your_resend_api_key_here

# ============================================
# REDIS CONFIGURATION (For rate limiting & caching)
# ============================================
# Get Redis URL from Upstash or Redis Cloud
REDIS_URL=redis://default:password@your-redis-host:6379
REDIS_ENABLED=true

# ============================================
# ERROR MONITORING (Sentry)
# ============================================
SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx
SENTRY_AUTH_TOKEN=your_sentry_auth_token
NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx

# ============================================
# FEATURE FLAGS
# ============================================
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_ENABLE_APP_CHECK=true
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=false
NEXT_PUBLIC_ENABLE_BUILDER_APPLICATIONS=true
NEXT_PUBLIC_ENABLE_RITUALS=true

# ============================================
# STORAGE LIMITS
# ============================================
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_MAX_IMAGE_SIZE=5242880
NEXT_PUBLIC_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp,image/gif

# ============================================
# PERFORMANCE THRESHOLDS
# ============================================
NEXT_PUBLIC_MAX_LOAD_TIME=3000
NEXT_PUBLIC_MAX_API_RESPONSE=1000
NEXT_PUBLIC_MAX_QUERY_TIME=500

# ============================================
# GOOSE AI (HiveLab Tool Generation)
# ============================================
# Backend selection: 'ollama', 'groq', or 'rules'
# - ollama: Self-hosted Goose model via Ollama ($0, requires Ollama running)
# - groq: Cloud-based Llama via Groq API (~$0.0001/request)
# - rules: Deterministic rules-based generator ($0, always works)
GOOSE_BACKEND=rules

# Ollama Configuration (if using ollama backend)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=goose

# Groq Configuration (if using groq backend)
# Get API key: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-8b-instant

# Legacy: Use rules-based as primary (set to 'false' to prefer AI backends)
USE_RULES_BASED_GENERATION=true

# ============================================
# CONTENT MODERATION (ML-based)
# ============================================
# Google Perspective API for toxicity detection
# Get API key: https://developers.perspectiveapi.com/s/docs-get-started
# Free tier: 1 QPS, Production: request quota increase
PERSPECTIVE_API_KEY=your_perspective_api_key_here

# Google Cloud Vision API for image moderation (SafeSearch)
# Uses same project as Firebase - enable Vision API in Cloud Console
# Get key: https://console.cloud.google.com/apis/credentials
GOOGLE_CLOUD_VISION_API_KEY=your_vision_api_key_here

# Moderation thresholds (optional - defaults in code)
# MODERATION_TOXICITY_THRESHOLD=0.6
# MODERATION_AUTO_REMOVE_THRESHOLD=0.95