{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@hive/ui": ["../../packages/ui/src"],
      "@hive/tokens": ["../../packages/tokens/src"],
      "@hive/hooks": ["../../packages/hooks/src"],
      "@hive/validation": ["../../packages/validation/src"],
      "@hive/auth-logic": ["../../packages/auth-logic/src"],
      "@hive/firebase": ["../../packages/firebase/src"],
      "@hive/core": ["../../packages/core/src"]
    },
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "dist",
    "build",
    "scripts",
    "playwright.config.ts",
    "playwright.simple.config.ts",
    "src/test/**/*",
    "tailwind.config.ts",
    "src/components/landing/3d/**/*",
    "src/lib/profile-transformers.ts"
  ]
}
