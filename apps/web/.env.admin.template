# Admin Features Configuration
ADMIN_FEATURES_ENABLED=true
ADMIN_DASHBOARD_ENABLED=true
ADMIN_MODERATION_ENABLED=true
ADMIN_ANALYTICS_ENABLED=true

# Admin Security
ADMIN_REQUIRE_2FA=false  # Set to true in production
ADMIN_SESSION_DURATION=86400000  # 24 hours in milliseconds
ADMIN_MAX_LOGIN_ATTEMPTS=5

# Admin Notifications
ADMIN_NOTIFICATION_EMAIL=admin@hive.college
ADMIN_ALERT_ON_SUSPICIOUS_ACTIVITY=true

# Feature Flags for Admin Control
FEATURE_FLAG_ADMIN_OVERRIDE=true
FEATURE_FLAG_REMOTE_CONFIG=false

# Development Admin Access
# Set to true to enable test-user as admin in development
ENABLE_DEV_ADMIN=true
DEV_ADMIN_EMAIL=test-user@hive.com