# Firebase Emulator Overrides
# Run with: pnpm dev:emulator

# Point Firebase Admin to emulators
FIRESTORE_EMULATOR_HOST=127.0.0.1:8080
FIREBASE_AUTH_EMULATOR_HOST=127.0.0.1:9099
FIREBASE_STORAGE_EMULATOR_HOST=127.0.0.1:9199
FIREBASE_DATABASE_EMULATOR_HOST=127.0.0.1:9000

# Point Firebase Client SDK to emulators
NEXT_PUBLIC_USE_EMULATORS=true
NEXT_PUBLIC_USE_FIREBASE_EMULATOR=true
NEXT_PUBLIC_EMULATOR_HOST=127.0.0.1
NEXT_PUBLIC_FIRESTORE_EMULATOR_HOST=127.0.0.1:8080
NEXT_PUBLIC_AUTH_EMULATOR_HOST=127.0.0.1:9099

# Use demo project (no real billing)
GCLOUD_PROJECT=demo-hive
FIREBASE_PROJECT_ID=demo-hive
NEXT_PUBLIC_FIREBASE_PROJECT_ID=demo-hive

# Force rules-based AI (no Groq needed)
USE_RULES_BASED_GENERATION=true
NEXT_PUBLIC_USE_FIREBASE_AI=false

# Disable external services in emulator
RESEND_API_KEY=
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=
